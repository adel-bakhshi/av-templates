{
  "name": "av-templates",
  "displayName": "Templates for Avalonia UI",
  "description": "An unofficial Visual Studio Code extension to quickly create Avalonia UI project files (Windows, UserControls, Styles, etc.) through context menus or commands.",
  "version": "3.0.0",
  "icon": "./assets/icon.png",
  "publisher": "ADdy2142",
  "license": "AGPL-3.0-only",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "avalonia",
    "avaloniaui",
    "avalonia-ui",
    "avalonia ui",
    "templates",
    "file-templates",
    "scaffolding",
    "window",
    "usercontrol",
    "styles",
    "templatedcontrol",
    "resourcedictionary"
  ],
  "bugs": {
    "url": "https://github.com/adel-bakhshi/av-templates/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adel-bakhshi/av-templates"
  },
  "activationEvents": [
    "workspaceContains:**/*.axaml",
    "onLanguage:axaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "av-templates.createWindow",
        "title": "Window",
        "category": "AV Template"
      },
      {
        "command": "av-templates.createUserControl",
        "title": "UserControl",
        "category": "AV Template"
      },
      {
        "command": "av-templates.createTemplatedControl",
        "title": "TemplatedControl",
        "category": "AV Template"
      },
      {
        "command": "av-templates.createStyles",
        "title": "Styles",
        "category": "AV Template"
      },
      {
        "command": "av-templates.createResourceDictionary",
        "title": "ResourceDictionary",
        "category": "AV Template"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "av-templates.submenu",
          "group": "navigation"
        }
      ],
      "av-templates.submenu": [
        {
          "command": "av-templates.createWindow"
        },
        {
          "command": "av-templates.createUserControl"
        },
        {
          "command": "av-templates.createTemplatedControl"
        },
        {
          "command": "av-templates.createStyles"
        },
        {
          "command": "av-templates.createResourceDictionary"
        }
      ]
    },
    "submenus": [
      {
        "id": "av-templates.submenu",
        "label": "Add new template",
        "icon": "./assets/icon.png"
      }
    ],
    "configuration": {
      "title": "AV Templates Settings",
      "properties": {
        "avt.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "warn",
            "error",
            "none"
          ],
          "enumDescriptions": [
            "Show all messages including debug information",
            "Show informational messages and above",
            "Show warnings and errors only",
            "Show errors only",
            "Disable all logging"
          ],
          "description": "Controls the logging level for the extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
